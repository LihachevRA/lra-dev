extends ../layout.pug

block title
  title Главная

block content
  .main
    .main__wrapper
      h1.main__title
        span Роман Лихачев
      p.main__sub-header Full Stack Developer
      p.main__description Предоставляю услуги по разработке веб-сервисов — создаю решения, которые легко масштабируются и соответствуют бизнес-задачам клиента.

    .main__skills
      span.main__skill.main__skill--blue TypeScript
      span.main__skill.main__skill--purple NestJS
      span.main__skill.main__skill--green React

    .skills-details
      div(class="skills-details__wrapper bg-white/50 backdrop-blur-sm rounded-lg border border-gray-200 p-4 md:p-8 shadow-lg")
        div(class="skills-details__grid grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-8")
          div(class="skill-details__block p-4 md:p-6 rounded-lg transition-colors border-2 bg-gray-50 hover:bg-gray-100 border-transparent")
            h3(class="skill-details__header text-lg md:text-xl font-semibold mb-3 md:mb-4 text-blue-600") Frontend Development
            ul(class="skill-details__list space-y-1.5 md:space-y-2 text-xs md:text-sm text-gray-600")
              each val in ["Современная архитектура", "Оптимизация страниц", "Отзывчивый и интерактивный UI"]
                li(class="skill-details__list-item flex items-center gap-2")
                  div(class="w-1.5 h-1.5 bg-blue-500 rounded-full")
                  | #{val}

          div(class="skill-details__block p-4 md:p-6 rounded-lg transition-colors border-2 bg-gray-50 hover:bg-gray-100 border-transparent")
            h3(class="skill-details__header text-lg md:text-xl font-semibold mb-3 md:mb-4 text-purple-600") Backend Development
            ul(class="skill-details__list space-y-1.5 md:space-y-2 text-xs md:text-sm text-gray-600")
              each val in ["Дизайн API", "Архитектура БД", "Real-time системы"]
                li(class="skill-details__list-item flex items-center gap-2")
                  div(class="w-1.5 h-1.5 bg-purple-500 rounded-full")
                  | #{val}

          div(class="skill-details__block p-4 md:p-6 rounded-lg transition-colors border-2 bg-gray-50 hover:bg-gray-100 border-transparent")
            h3(class="skill-details__header text-lg md:text-xl font-semibold mb-3 md:mb-4 text-teal-600") DevOps
            ul(class="skill-details__list space-y-1.5 md:space-y-2 text-xs md:text-sm text-gray-600")
              each val in ["Kubernetes", "CI/CD Pipelines", "Настройка веб-сервера"]
                li(class="skill-details__list-item flex items-center gap-2")
                  div(class="w-1.5 h-1.5 bg-teal-500 rounded-full")
                  | #{val}